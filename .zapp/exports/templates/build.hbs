apply plugin: 'com.android.application'

android {
    {{#if compileSdkVersion}}
    compileSdkVersion {{{compileSdkVersion}}}
    {{/if}}
    {{#if defaultConfig}}
    defaultConfig {
        {{#if defaultConfig.applicationId}}
        applicationId "{{{defaultConfig.applicationId}}}"
        {{/if}}
        {{#if defaultConfig.minSdkVersion}}
        minSdkVersion {{{defaultConfig.minSdkVersion}}}
        {{/if}}
        {{#if defaultConfig.targetSdkVersion}}
        targetSdkVersion {{{defaultConfig.targetSdkVersion}}}
        {{/if}}
        {{#if defaultConfig.versionCode}}
        versionCode {{{defaultConfig.versionCode}}}
        {{/if}}
        {{#if defaultConfig.versionName}}
        versionName "{{{defaultConfig.versionName}}}"
        {{/if}}
    }
    {{/if}}
    {{#if buildTypes}}
    buildTypes {
        {{#each buildTypes}}
        {{{case @key 'camel'}}} {
            {{#typeof minifyEnabled 'boolean'}}
            minifyEnabled {{{minifyEnabled}}}
            {{/typeof}}
        }
        {{/each}}
    }
    {{/if}}
}

dependencies {
    implementation fileTree(dir: 'libs', include: ['*.jar'])
    implementation 'com.android.support:appcompat-v7:28.0.0-alpha3'
    implementation 'com.android.support:design:28.0.0-alpha3'
    implementation 'com.android.support.constraint:constraint-layout:1.1.2'
    implementation 'com.android.support:support-vector-drawable:28.0.0-alpha3'
    testImplementation 'junit:junit:4.12'
    androidTestImplementation 'com.android.support.test:runner:1.0.2'
    androidTestImplementation 'com.android.support.test.espresso:espresso-core:3.0.2'
}
